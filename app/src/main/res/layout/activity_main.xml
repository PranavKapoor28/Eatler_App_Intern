<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="10dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView61"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="#050505"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.463" />

    <EditText
        android:id="@+id/NameSign"
        android:layout_width="289dp"
        android:layout_height="52dp"
        android:background="#172E2D2D"
        android:ems="10"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#0B0B0B"
        android:textColorHint="#B60C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <EditText
        android:id="@+id/PasswordSign"
        android:layout_width="289dp"
        android:layout_height="48dp"
        android:background="#172E2D2D"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#090909"
        android:textColorHint="#E4050000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailSign"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:background="@drawable/loginbtn"
        android:text="Sign Up"
        android:textColor="#FAF9F9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneSign"
        app:layout_constraintVertical_bias="0.151" />

    <EditText
        android:id="@+id/EmailSign"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:background="#172E2D2D"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#050505"
        android:textColorHint="#FB020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameSign"
        app:layout_constraintVertical_bias="0.057" />

    <EditText
        android:id="@+id/PhoneSign"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:background="#172E2D2D"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColor="#070707"
        android:textColorHint="#B6090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSign"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/textViewSignin"
        android:layout_width="312dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="Already Have an account? Login Now"
        android:textColor="#E18F01"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignup"
        app:layout_constraintVertical_bias="0.259" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="151dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/NameSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"
        app:srcCompat="@drawable/eatler" />

</androidx.constraintlayout.widget.ConstraintLayout>